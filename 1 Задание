#include <iostream>
#include <string>
#include <locale.h>

using namespace std;

int a;

int main()
{
setlocale(LC_ALL, "Russian");	
cout << "Введите положительное пятизначное число: " << endl;
cin >> a;
//поразрядное разбиение числа
	if (a >= 10000 && a <= 99999)
		{
		cout << "Первый разряд: " << (a / 10000) << endl;
		cout << "Второй разряд: " << (a / 1000) % 10 << endl;
		cout << "Третий разряд: " << (a / 100) % 10 << endl;
		cout << "Четвертый разряд: " << (a / 10) % 10 << endl;
		cout << "Пятый разряд: " << (a % 10) << endl;
		}

	else {
		cout << "Ошибка ввода, повторите еще раз" << endl;
		return main();
		 }

	return 0;
}
