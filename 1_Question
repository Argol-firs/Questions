#include <iostream>
#include <string>
#include <locale.h>

using namespace std;

int a, b, i, n;

int main()
{
	setlocale(LC_ALL, "Russian");
	cout << "Введите положительное пятизначное число: ";
	cin >> a;
	//поразрядное разбиение числа
	if (a >= 10000 && a <= 99999)
	{
		n = 0;
		for (i = 1; i < 6; i++)
		{
			b = a % 10;
			a = a / 10;
			n++;
			cout << n << " Разряд = " << b << "\n";
		}
	}
	else {
		cout << "Ошибка ввода, повторите еще раз" << endl;
		return main();
	}
return 0;
}